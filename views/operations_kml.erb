<?xml version='1.0' encoding='UTF-8'?>
<kml xmlns='http://www.opengis.net/kml/2.2'>
  <Document>
    <% @operations.each do |event| %>
      <Placemark>
        <name><%= event.title%> (<%=event.start%>)</name>
        <description><%= event.kml_description %></description>
        <Point>
          <coordinates><%=event.lon%>,<%=event.lat%>,0</coordinates>
        </Point>
        <BalloonStyle>
          <text>$[description]</text>
        </BalloonStyle>
      </Placemark>
    <% end %>
  </Document>
</kml>
