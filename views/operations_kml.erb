<?xml version='1.0' encoding='UTF-8'?>
<kml xmlns='http://www.opengis.net/kml/2.2'>
  <Document>
    <% @operations.each do |event| %>
      <Placemark>
        <name><%= event.title%> (<%=event.start%>)</name>
        <description>
          <![CDATA[<%= event.kml_description %>]]>
        </description>
        <Point>
          <coordinates><%=event.lon%>,<%=event.lat%>,0</coordinates>
        </Point>
        <styleUrl>#my_style</styleUrl>
        <Style id="my_style">
          <BalloonStyle>
            <text><![CDATA[<b>$[name]</b><br/>$[description]]]></text>
          </BalloonStyle>
        </Style>
      </Placemark>
    <% end %>
  </Document>
</kml>
