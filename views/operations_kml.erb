<?xml version='1.0' encoding='UTF-8'?>
<kml xmlns='http://www.opengis.net/kml/2.2'>
  <Document>
    <% @operations.each do |event| %>
      <Placemark>
        <name><%= event.title%> (<%=event.start%>)</name>
        <description>
          <![CDATA[
          <%= event.kml_description %>
          <table>
          ]]>
        </description>
        <Point>
          <coordinates><%=event.lon%>,<%=event.lat%>,0</coordinates>
        </Point>

      </Placemark>
    <% end %>
  </Document>
</kml>
