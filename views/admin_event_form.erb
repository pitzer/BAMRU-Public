<form method="post" action="<%=@action%>">
  <table cellpadding=1 cellspacing=1>
    <tr>
      <td class="ar">Kind:</td>
      <td><select name="kind">
        <%= select_helper(@event) %>
      </select></td>
      <td></td>
    </tr>
    <tr>
      <td class="ar">Title:</td>
      <td><input type="Text" size=35 maxlength=128 name="title" value="<%=@event.title%>"></td>
      <td>e.g. "Snow Search and Rescue"</td>
    </tr>
    <tr>
      <td class="ar">Location:</td>
      <td><input type="Text" size=35 maxlength=128 name="location" value="<%=@event.location%>"></td>
      <td>use "TBA" if unknown</td>
    </tr>
    <tr>
      <td class="ar">Leaders:</td>
      <td><input type="Text" size=35 maxlength=128 name="leaders" value="<%=@event.leaders%>"></td>
      <td>e.g. "Joe Climber, Stacy Skier", or "TBA" if unknown</td>
    </tr>
    <tr>
      <td class="ar">Start:</td>
      <td><input type="Text" size=10 maxlength=10 name="start" value="<%=@event.start%>"></td>
      <td>YYYY-MM-DD <i>e.g.,</i> "2006-01-22".</td>
    </tr>
    <tr>
      <td class="ar">End:</td>
      <td><input type="Text" size=10 maxlength=10 nameme="end" value="<%=@event.end%>"></td>
      <td>Optional, use only for multi-day events.</td>
    </tr>
    <tr>
      <td>Description:</td>
      <td colspan=2><textarea cols=72 rows=8 name="description"><%=@event.description%></textarea></td>
    </tr>
    <tr>
      <td></td>
      <td colspan=2>Description may contain any html. Use html equivalents when
      entering special characters.<br/>
      <b>USE FULL SENTENCES, correct punctuation, grammar and spelling. Proofread!</b><br/>
      This posts to a public page and what you write here reflects on the unit.</td>
    </tr>
    <tr>
      <td></td>
      <td>
        <br/>
        <input type="submit" name="submit" value="<%=@button_text%>">
        <input type="submit" name="cancel" value="Cancel">
      </td>
    </tr>
  </table>
</form>
